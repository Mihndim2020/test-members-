<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
       <th><%= user_author(@user) %></th>
      <%# <th>User</th> %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= author(post) %></td>
        <%# <td><%= post.user_id %></td> %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

<div class='footer_links'>
    <li>
        <%= post_new(@user) %>
    </li>
    <li>
        <%= user_logout(@user) %>
    </li>
    <li>
        <%= user_edit(@user) %>
    </li>
    <li>
        <%= user_sign(@user) %>
    </li>
</div>
